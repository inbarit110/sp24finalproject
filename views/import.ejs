<%- include("_header") -%>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<h1>Customer Import</h1>
<p>Total number of records in the database: <%= totRecs %></p>
<p>Select a file with customers for Database Insert</p>

<body>
  <form action="/import" method="POST" enctype="multipart/form-data" onsubmit="return validateForm()">
      <label for="file"></label>
      <input type="file" id="file" name="filename" required>
      <br><br>
      <button type="submit">Import</button>
  </form>

  <div id="notification" style="display:none;">Wait for results...</div>

  <script>
      function validateForm() {
          var fileInput = document.getElementById("file");

          if (!fileInput.value) {
              alert("Please choose a file.");
              return false;
          }

          document.getElementById("notification").style.display = "block";
          return true;
      }
  </script>
  
</body>

